<UserControl x:Class="WindowsPet.Views.Ucontrol.ButtonWithCircleCorner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             xmlns:local="clr-namespace:WindowsPet.Views.Ucontrol"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             >
    <Grid  >
        <ed:Arc ArcThickness="1"
                StartAngle="0"
                EndAngle="360"
                Stroke="DodgerBlue"
                StrokeThickness="1"
                Width="40"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

        <!-- 按鈕：透明，包住圖示 -->
        <Button Style="{StaticResource ButtonWithCircleCorner}"
                BorderThickness="0"
                Command="{Binding LoginBtn, RelativeSource={RelativeSource AncestorType=local:ButtonWithCircleCorner}}">
            <materialDesign:PackIcon Kind="{Binding ICON, RelativeSource={RelativeSource AncestorType=local:ButtonWithCircleCorner}}"
                                     Foreground="White"/>
        </Button>
    </Grid>
</UserControl>
