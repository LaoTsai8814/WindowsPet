<UserControl x:Class="WindowsPet.Views.Tabs.LoginTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsPet.Views.Tabs"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:WindowsPet.Views.Ucontrol"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:WindowsPet.Command"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- 表單 -->

            <Grid Grid.Row="0" Width="500" Height="200 ">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="使用者名稱"
                FontSize="15"
                Foreground="White"
                HorizontalAlignment="Left"
                Margin="0,0,0,5"
                VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <TextBox Text="{Binding Username}" Style="{StaticResource TextBoxTemplate}" FontSize="15"></TextBox>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="密碼"
                FontSize="15"
                Foreground="White"
                HorizontalAlignment="Left"
                Margin="0,0,0,5"
                VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1">
                    <PasswordBox helpers:PasswordHelp.Passwd="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PasswordBoxTemplate}" FontSize="15"></PasswordBox>
                </Grid>
                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <UniformGrid Columns="2">
                        <uc:ButtonWithCircleCorner ICON="Google" LoginBtn="{Binding GoogleLoginCommand}"></uc:ButtonWithCircleCorner>
                        <uc:ButtonWithCircleCorner ICON="Register" LoginBtn="{Binding RegisterCommand}"></uc:ButtonWithCircleCorner>

                    </UniformGrid>

                </Grid>
            </Grid>

            <!-- 登入按鈕 -->
            <Button Grid.Row="1"
            Content="登入"
            Command="{Binding LoginCommand}"
            Height="40"
            Background="#4A90E2"
            Foreground="White"
            FontSize="14"
            BorderThickness="0"
            Cursor="Hand"

            HorizontalAlignment="Stretch"
            />
        </Grid>
    </Grid>
</UserControl>
