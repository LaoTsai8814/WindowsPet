<UserControl x:Class="WindowsPet.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsPet.Views"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:WindowsPet.Views.Ucontrol"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:WindowsPet.Command"
             mc:Ignorable="d" 
             >
    <Border CornerRadius="25"  Padding="30">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <GradientStop Color="#1e2e44" Offset="0" />
                <GradientStop Color="Black" Offset="1" />
            </LinearGradientBrush>

        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>

            <!-- Title And Minimize Button -->
            <Grid Grid.Row="0">
                <TextBlock Text="登入桌寵系統"
    FontSize="20"
    FontWeight="SemiBold"
    Foreground="White"
    HorizontalAlignment="Center"
    Margin="0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <uc:SideButton Icon="WindowMinimize"   Command="{Binding MinimizeCommand}"/>
                    <uc:SideButton Icon="WindowClose"   Command="{Binding MinimizeCommand}"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <UserControl Content="{Binding Tab}"></UserControl>
            </Grid>
        </Grid>


    </Border>
</UserControl>
